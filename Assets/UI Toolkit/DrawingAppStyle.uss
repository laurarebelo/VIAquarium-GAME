    margin-top: 1px;
    position: relative;
    top: auto;
    left: auto;
    right: auto;
    bottom: auto;
    font-size: 28px;
    -unity-background-scale-mode: scale-to-fit;
    height: 100px;
    background-color: rgba(255, 255, 255, 0);
    padding-top: 15px;
    padding-right: 30px;
    padding-bottom: 15px;
