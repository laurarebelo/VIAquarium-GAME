    -unity-slice-scale: 2px;
}

.button_background:checked {
    background-image: url('project://database/Assets/Sprites/Drawing/Kenney%20ui%20pack%20pixel%20adventure/Tiles/Large%20tiles/Thin%20outline/tile_0002.png?fileID=-2727194386381995188&guid=c4139d9b5f7bdcc43b92c634da2df6ba&type=3#tile_0002_0');
}

.tool_button {
    flex-shrink: 1;
    -unity-background-scale-mode: scale-to-fit;
    background-color: rgba(255, 255, 255, 0);
    flex-grow: 1;
    margin-top: 0;
    position: relative;
    top: auto;
    left: auto;
    right: auto;
    bottom: auto;
    font-size: 28px;
    background-image: url('project://database/Assets/Sprites/Drawing/Kenney%20Cursor%20pack/PNG/Outline/Double/drawing_pen.png?fileID=-5172951650001389678&guid=7e2caa2f733b92941808f10be3c907bf&type=3#drawing_pen_0');
    height: 100px;
    padding-top: 0;
    padding-right: 0;
    padding-bottom: 0;
    padding-left: 0;
    margin-right: 0;
    margin-bottom: 0;
    margin-left: 0;
}

.label_Text {
    color: rgb(0, 0, 0);
    -unity-text-outline-width: 0;
    text-shadow: 0 0 0 rgb(0, 0, 0);
}
